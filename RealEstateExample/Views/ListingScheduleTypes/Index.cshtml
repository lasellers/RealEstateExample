@model IEnumerable<RealEstateExample.Models.ListingScheduleType>
@{
//  Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listing Schedule Types</title>
</head>
<body>

    <h2>Listing Schedule Types</h2>

    @Html.ActionLink("New Listing Schedule Type", "New", "Listing Schedule Types", new { @class = "btn btn-primary" })

    @if (!Model.Any())
    {
        <p>No schedule types yet</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Cost</th>
                    <th>Discount Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model)
                {
                    <tr>
                        <td>
                            @if ((System.Web.HttpContext.Current.User != null) && System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Edit", "Edit", "ListingScheduleTypes", new { id = type.Id }, new { @class = "btn btn-primary" })
                            }
                        </td>
                        <td>@Html.ActionLink(string.Format("{0}", type.Id), "Details", "ListingScheduleTypes", new { id = type.Id }, null)</td>
                        <td>@type.Cost</td>
                        <td>@type.DiscountRate</td>
                        <td>
                            @if ((System.Web.HttpContext.Current.User != null) && System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                            {
                                @Html.ActionLink("Delete", "Delete", "ListingScheduleTypes", new { id = type.Id }, null)
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>

@section scripts
{
    <script>

    </script>
}